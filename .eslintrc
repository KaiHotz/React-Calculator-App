{
  "root": true,
  "extends": [
    "standard",
    "plugin:react/recommended"
  ],
  "plugins": [
    "jest",
    "react"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 7,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "jasmine": true,
    "browser": true,
    "node": true,
    "es6": true,
    "jest/globals": true
  },
  "rules": {
    "import/no-unresolved": [
      2,
      {
        "caseSensitive": false
      }
    ],
    "arrow-parens": [
      "error",
      "as-needed"
    ],
    "semi": [
      2,
      "never"
    ],
    "max-len": 0,
    "no-underscore-dangle": 0,
    "no-invalid-this": 0
  }
}
